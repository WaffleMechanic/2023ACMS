@page
@model _2023ACMS.Pages.Artworks.AddArtworkModel
@{
    ViewData["Title"] = "Add Artwork";
}

<form method="post" enctype="multipart/form-data">
    <table>
        <tr>
            <td><label asp-for="Artwork.StudentId">Student Name:</label></td>
            <td>
                <select asp-for="Artwork.StudentId">
                    @foreach (var item in Model.JoinResultIList)
                    {
                        <option value="@item.StudentId">@item.StudentFirstName @item.StudentLastName</option>
                    }
                </select>
                <span asp-validation-for="Artwork.StudentId" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="Media.Media1"></label><label>: </label></td>
            <td>
                <select asp-for="Artwork.MediaId">
                    @foreach (var item in Model.MediaJoinResultIList)
                    {
                        <option value="@item.MediaId">@item.MediaName</option>
                    }
                </select>
                <span asp-validation-for="Artwork.MediaId" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="Artwork.Title"></label><label>: </label></td>
            <td>
                <input asp-for="Artwork.Title" />
                <span asp-validation-for="Artwork.Title" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="Artwork.Filename"></label><label>: </label></td>
            <td>
                <input asp-for="ArtworkImage" id="filFile" type="file" class="form-control" />
                <span asp-validation-for="Artwork.Filename" />
            </td>
            <td><label id="lblMessage"></label></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input asp-page-handler="Add" type="submit" value="Add" />
                <a asp-page="CancelArtwork" class="btn">Cancel</a>
            </td>
        </tr>
    </table>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

